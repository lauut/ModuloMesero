@{
}

<h3>Cuentas:</h3>
<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var cuenta in (IEnumerable<dynamic>)ViewData["listcuenta"])
    {
        <div class="col">
            <div class="card h-100 border-success bg-light">
                <div class="card-body">
                    <h5 class="card-title">Cuenta</h5>
                    <p class="card-text">Nombre: @cuenta.nombre</p>
                    <p class="card-text">N mesa:  @cuenta.nombremesa</p>
                    <p class="card-text"><b>Id Cuenta  @cuenta.idcuenta</b></p>
                    <p class="card-text"> Total: </p>
                    <button type="submit" class="btn btn-success left">Ver pedido</button>
                    <button type="submit" class="btn btn-danger left">Cerrar Cuenta</button>
                </div>
            </div>
        </div>
    }
</div>